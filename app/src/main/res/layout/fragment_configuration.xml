<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.configuration.ConfigurationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="5"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="72dp"
                android:orientation="vertical">

                <!--           <ImageView-->
                <!--               android:id="@+id/imvConfigurationsUserImg"-->
                <!--               android:layout_width="250dp"-->
                <!--               android:layout_height="250dp"-->
                <!--               android:layout_gravity="center"-->
                <!--               android:src="@drawable/defaultuserimg" />-->

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/imvConfigurationsUserImg"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="32dp"
                    android:src="@drawable/defaultuserimg"
                    app:civ_border_color="@color/colorPrimary"
                    app:civ_border_width="2dp" />

                <TextView
                    android:id="@+id/txvConfigurationsUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Olá, Usuário!"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlack"
                    android:textSize="24dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:id="@+id/txvConfigurationsEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:text="Email"
                    android:textAlignment="center"
                    android:textColor="@color/colorGray"
                    android:textSize="12dp"></TextView>

                <Button
                    android:id="@+id/btnLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="24dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="24dp"
                    android:layout_marginBottom="32dp"
                    android:background="@color/colorAccent"
                    android:drawableLeft="@drawable/ic_exit_to_app_black_24dp"
                    android:drawableTint="@color/colorWhite"
                    android:text="@string/configuration_text_logout"
                    android:textColor="@color/colorWhite"></Button>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</ScrollView>